<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.origin.aiur" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".app.AiurApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.splash.AiurActivity"
            android:theme="@style/Theme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.logon.LoginActivity" >
        </activity>
        <activity
            android:name=".activity.main.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
        <activity android:name=".activity.logon.RegisterActivity" >
        </activity>
        <activity
            android:name=".activity.group.GroupActivity"
            android:label="@string/title_activity_group" >
        </activity>
        <activity
            android:name=".activity.group.NewGroupActivity"
            android:label="@string/title_activity_new_group" >
        </activity>
        <activity
            android:name=".activity.group.JoinGroupActivity"
            android:label="@string/title_activity_join_group" >
        </activity>
        <activity
            android:name=".activity.group.GroupTabActivity"
            android:label="@string/title_activity_group_tab" >
        </activity>
    </application>

</manifest>

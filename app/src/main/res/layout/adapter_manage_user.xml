<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/tabManageListPaddingLeftRight"
        android:paddingRight="@dimen/tabManageListPaddingLeftRight"
        android:paddingTop="@dimen/tabManageListPaddingTopBottom"
        android:paddingBottom="@dimen/tabManageListPaddingTopBottom"
        android:layout_margin="@dimen/tabManageListMargin"
        android:background="@drawable/extra_card_selector_color6">

        <ImageView
            android:id="@+id/groupUserManageAvatar"
            android:layout_width="@dimen/tabManageUserItemIconWidth"
            android:layout_height="@dimen/tabManageUserItemIconHeight"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/selectUserIconMarginLeft"
            android:layout_marginRight="@dimen/selectUserIconMarginRight"
            android:src="@drawable/ic_launcher"/>

        <TextView
            android:id="@+id/groupUserManageText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AIUR"
            android:textSize="@dimen/selectUserNameTextSize"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/groupUserManageApprove"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBlueButtonSmallHeight"
            android:background="@drawable/button_blue_bg"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/commonBlueButtonTextColor"
            android:textSize="@dimen/commonBlueButtonSmallTextSize"
            android:textStyle="bold"
            android:text="@string/tabManageUserListItemButtonApprove"
            android:layout_marginLeft="@dimen/commonBlueButtonSmallMarginLeft"
            android:layout_marginRight="@dimen/commonBlueButtonSmallMarginRight"
            android:paddingLeft="@dimen/commonBlueButtonSmallPaddingLeftRight"
            android:paddingRight="@dimen/commonBlueButtonSmallPaddingLeftRight"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/groupUserManageReject"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBlueButtonSmallHeight"
            android:background="@drawable/button_blue_bg"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/commonBlueButtonTextColor"
            android:textSize="@dimen/commonBlueButtonSmallTextSize"
            android:textStyle="bold"
            android:text="@string/tabManageUserListItemButtonReject"
            android:layout_marginLeft="@dimen/commonBlueButtonSmallMarginLeft"
            android:layout_marginRight="@dimen/commonBlueButtonSmallMarginRight"
            android:paddingLeft="@dimen/commonBlueButtonSmallPaddingLeftRight"
            android:paddingRight="@dimen/commonBlueButtonSmallPaddingLeftRight"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/groupUserManageRemove"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/commonBlueButtonSmallHeight"
            android:background="@drawable/button_blue_bg"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/commonBlueButtonTextColor"
            android:textSize="@dimen/commonBlueButtonSmallTextSize"
            android:textStyle="bold"
            android:text="@string/tabManageUserListItemButtonRemove"
            android:layout_marginLeft="@dimen/commonBlueButtonSmallMarginLeft"
            android:layout_marginRight="@dimen/commonBlueButtonSmallMarginRight"
            android:paddingLeft="@dimen/commonBlueButtonSmallPaddingLeftRight"
            android:paddingRight="@dimen/commonBlueButtonSmallPaddingLeftRight"
            android:visibility="gone"/>

    </LinearLayout>
</RelativeLayout>

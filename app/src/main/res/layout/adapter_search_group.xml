<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/searchGroupItemPaddingLeftRight"
        android:paddingRight="@dimen/searchGroupItemPaddingLeftRight"
        android:paddingTop="@dimen/searchGroupItemPaddingTopBottom"
        android:paddingBottom="@dimen/searchGroupItemPaddingTopBottom"
        android:layout_margin="@dimen/searchGroupItemMargin"
        android:background="@drawable/extra_card_selector_color6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/joinGroupInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XX Group"
                android:singleLine="true"
                android:textStyle="bold"
                android:ellipsize="end"
                android:textSize="@dimen/searchGroupDescriptionTextSize"/>

            <TextView
                android:id="@+id/joinGroupDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a group"
                android:textSize="@dimen/searchGroupDescriptionTextSize"/>

        </LinearLayout>

        <TextView
            android:id="@+id/joinGroupRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue_bg"
            android:clickable="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/commonBlueButtonTextColor"
            android:textSize="@dimen/commonBlueButtonTextSize"
            android:text="@string/btn_join_request"
            android:layout_marginLeft="@dimen/searchGroupButtonMarginLeftRight"
            android:layout_marginRight="@dimen/searchGroupButtonMarginLeftRight"
            android:paddingLeft="@dimen/searchGroupButtonPaddingLeftRight"
            android:paddingRight="@dimen/searchGroupButtonPaddingLeftRight"
            android:onClick="onClick"/>
    </LinearLayout>
</RelativeLayout>
